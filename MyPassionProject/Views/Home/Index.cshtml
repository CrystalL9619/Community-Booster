@model IEnumerable<MyPassionProject.Models.EventDto>

@{
    ViewBag.Title = "Home Page";
    @*<a href="~/Content/bootstrap-utilities.min.css.map">~/Content/bootstrap-utilities.min.css.map</a>*@
    <link href="~/CSS/index.css" rel="stylesheet" />
}

<nav class="mainnav">
    @Html.ActionLink("Fun", "Find", "Category", new { id = 1 }, null)
    @Html.ActionLink("Fare", "Find", "Category", new { id = 2 }, null)
    <div class="animation"></div>
</nav>

<div class="main">
    <div class="eachone">
        <div class="event">
            <div class="card">
                <div class="content">
                    <h2 id="eventTitle">Title</h2>
                    <h3> Location : </h3>
                    <p id="eventLocation">Location</p>
                    <h3>Date: </h3>
                    <p id="eventDate">EventDateTime</p>
                    <h3> Capacity:</h3>
                    <p id="eventCapacity">Capacity</p>
                </div>
            </div>
            <div class="details">
                <p class="threeD">Details:</p>
                <p class="breakdown threeD">
                    Details
                </p>
            </div><!--end of details-->
        </div><!--end of event-->
    
    }
        <div class="list">
            <h2>List</h2>
            <p id="listInput"></p>
            <div class="register">
                <form name="myForm" id="myForm">
                    <p>Reserve your spot here:</p>
                    <label for="regisName">Name : </label>
                    <input type="text" id="regisName" name="regisName" placeholder="i.e.: James Lee">
                    <button type="submit" id="button">Add</button>
                </form>
            </div>
        </div><!--end of list-->
    </div><!--end of eachone-->
</div>

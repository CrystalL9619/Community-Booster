﻿@model MyPassionProject.Models.EventDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div>
    <nav>
        <a class="btn btn-secondary" href="/Event/Find/@Model.EventId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete this Event?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Event/Delete/@Model.EventId">
        <button class="btn btn-danger">
            Confirm Delete
        </button>
    </form>
    <br />
</div>